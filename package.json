  "private": true,
  "scripts": {
    "dev": "next dev --turbopack",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "typecheck": "tsc --noEmit",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "db:generate": "drizzle-kit generate",
    "db:push": "drizzle-kit push",
    "db:studio": "drizzle-kit studio",
    "e2e": "docker compose -f docker-compose.e2e.yml up -d --build && npm run e2e:wait && npm run e2e:local; npm run e2e:down",
    "e2e:up": "docker compose -f docker-compose.e2e.yml up -d --build",
    "e2e:down": "docker compose -f docker-compose.e2e.yml down -v",
    "e2e:wait": "sh -c 'echo Waiting for app to be ready... && until curl -s http://localhost:55000/api/health > /dev/null 2>&1; do sleep 2; done && echo App is ready!'",
    "e2e:local": "npx playwright test --config=e2e/playwright.config.ts"
  },
